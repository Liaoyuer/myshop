/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/
::-webkit-scrollbar {
  width: 6px;
  height: 8px;
}
::-webkit-scrollbar-thumb {
  background: hsla(0, 0%, 53%, 0.4);
  border-radius: 6px;
}
::-webkit-scrollbar-track {
  background: hsla(0, 0%, 53%, 0.1);
}
._ul,
._ol,
._li {
  list-style: none;
  -webkit-padding-start: 0;
}
._a {
  text-decoration: none;
}
._img {
  max-width: 100%;
}














